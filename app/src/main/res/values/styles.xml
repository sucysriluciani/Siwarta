<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityPadding">
        <item name="android:paddingBottom">@dimen/activity_padding_vertical</item>
        <item name="android:paddingTop">@dimen/activity_padding_vertical</item>
        <item name="android:paddingRight">@dimen/activity_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/activity_padding_horizontal</item>
    </style>

</resources>
